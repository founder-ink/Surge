/* Pages/calendar/calendar.wxss */
page {
  background: #FEFFFE;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  padding: 8% 4% 0 4%;
  box-sizing: border-box;
}

.close {
  position: fixed;
  top: 2%;
  right: 4%;
  font-size: 56rpx;
  color: #BFBFBF;
  opacity:0.5;
}

.today {
  font-size: 48rpx; 
  font-weight: 900;
  font-family: "Noto Sans CJK SC Blod", "Source Han Sans CN Blod";
  margin-left: 1%;
}

.liquid {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: flex-start;
}

.panel {
  width: 100%;
  height: 340rpx;
  border-bottom: 1px solid #ECECEC;
}

.panel-head {
  width: 100%;
  height: 110rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.panel-type .iconfont {
  width: 10%;
}

.panel-type .iconfont {
  font-size: 40rpx;
  color: #69b076;
}

.panel-info {
  width: 76%;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}

.panel-icon {
  width: 100%;
  height: 45rpx;
}

.panel-timeline {
  width: 100%;
  height: 45rpx;
  font-size: 20rpx;
  color: #8e8e93;
  padding: 20rpx;
}

.panel-pin {
  width: 14%;
  height: 36rpx;
  font-size: 18rpx;
  color: #8e8e93;
  border: 1px solid #8e8e93;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.panel-body {
  width: 100%;
  height: 160rpx;
  background: brown;
  border-radius: 20rpx;
  display: flex;
  align-items: flex-end;
  box-shadow: 0 1px 3px 1px rgba(0,0,0,0.3);
}

.panel-title {
  width: 80%;
  color: #FEFFFE;
  font-size: 30rpx;
  margin: 0 0 2% 2%;
}

.nav-button {
  position: fixed;
  width: 92%;
  bottom: 48rpx;
  z-index: 999;
  height: 140rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.nav-ulysses {
  background: #FEFFFE;
  border-radius: 50%;
  width: 110rpx;
  height: 110rpx;
  text-align: center;
  line-height: 110rpx;
  box-shadow: 0 0px 20px 1px rgba(0,0,0,0.2);
}

.nav-ulysses .iconfont{
  font-size: 48rpx;
  color:#69b076;
  line-height:inherit;
}
