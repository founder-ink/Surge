/* gallery-item */
.gallery-item-body {
  width: 440rpx;
  height: 86%;
  border-radius: 30rpx;
  color: #FEFFFE;
  letter-spacing: 1px;
  box-shadow: 0 0px 10px 1px rgba(0,0,0,0.2);
  flex-shrink:0;
  margin: 10rpx 4% 0 0%;
  position: relative;
}

.gallery-item-body image {
  width: 100%;
  height: 100%;
  border-radius: 30rpx;
}

.gallery-item-position {
  font-size: 24rpx;
  position: absolute;
  z-index: 2;
  top: 50rpx;
  left: 50rpx;
  letter-spacing: 2rpx;
}

.gallery-item-mark {
  font-size: 42rpx;
  font-weight: 600;
  display: flex;
  position: absolute;
  z-index: 2;
  top: 110rpx;
  left: 50rpx;
}

.gallery-item-sign {
  font-size: 24rpx;
  white-space: normal;
  position: absolute;
  z-index: 2;
  bottom: 30rpx;
  left: 50rpx;
  letter-spacing: 2rpx;
}

.gallery-item-mask {
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,.3);
  border-radius: 20rpx;
  position: absolute;
  z-index: 1;
  top: 0;
  left: 0;
}
