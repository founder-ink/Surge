@import "../featured-gallery/featured-gallery-template.wxss";

/* featured-panel */
.featured {
  width: 100%;
  height: 720rpx;
}

.featured-title {
  width: 96%;
  height: 120rpx;
  display: flex;
  align-items: center;
  font-weight: 600;
  letter-spacing: 1px;
  font-size: 40rpx;
  padding-left: 4%;
}

.featured-panel {
  display: flex;
  flex-wrap: nowrap;
  height: 580rpx;
  align-items: center;
}

.featured-block {
  width: 20rpx;
  flex-shrink:0;
  height: 90%;
}

.hr {
  width: 94%;
  background: #ECECEC;
  margin: 0 auto;
  height: 2rpx;
}