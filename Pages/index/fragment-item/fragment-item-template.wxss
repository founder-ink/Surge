.panel-card {
  width: 320rpx;
  height: 400rpx;
  border-radius: 20rpx;
  flex-shrink: 0;
  margin: 10rpx 1% 0 3%;
}

.panel-body {
  width: 100%;
  height: 320rpx;
  border-radius: 20rpx;
  box-shadow: 0 0px 10px 1px rgba(0, 0, 0, 0.2);
  color: #fefffe;
  letter-spacing: 1px;
  position: relative;
}

.panel-body image {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}

.panel-mask {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.2);
  border-radius: 20rpx;
  z-index: 1;
  position: absolute;
  top: 0;
}

.panel-title {
  font-size: 28rpx;
  height: 40%;
  display: flex;
  align-items: center;
  text-overflow: ellipsis;
  position: absolute;
  bottom: 0;
  left: 30rpx;
  z-index: 2;
  letter-spacing: 2rpx;
}

.panel-user {
  width: 100%;
  display: flex;
  height: 100rpx;
  align-items: center;
}

.panel-userImg {
  display: flex;
  justify-content: center;
  align-items: center;
}
.panel-userImg image {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
}

.panel-userName {
  padding-left: 5%;
}

.panel-userName text {
  font-size: 24rpx;
  color: #68736c;
}

