/**index.wxss**/

page {
  height: 100%;
}

.home-swiper {
  width: 100%;
  height: 100%;
}

.swiper-item {
  overflow: auto;
}

/* container */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #fefffe;
  width: 100%;
  height: 100%;
}

/* container-banner */
.container .banner {
  width: 94%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  flex-wrap: wrap;
  margin: 3% 3% 20rpx 3%;
}

.container .banner .banner-left {
  width: 21%;
  height: 280rpx;
  position: relative;
}

.container .banner .banner-left .banner-date {
  width: 100%;
  height: 60%;
  border-radius: 10px;
  color: #fefffe;
  box-shadow: 0 0px 10px 1px rgba(0, 0, 0, 0.2);
  position: relative;
  text-align: center;
}

.container .banner .banner-left .banner-date image {
  width: 100%;
  height: 100%;
  border-radius: 10px;
}

.container .banner .banner-left .banner-date .today {
  width: 100%;
  font-size: 28rpx;
  font-weight: 500;
  font-family: Verdana;
  letter-spacing: 2rpx;
  position: absolute;
  top: 36rpx;
  z-index: 999;
}

.container .banner .banner-left .banner-date .date {
  width: 100%;
  margin-top: 8rpx;
  font-size: 60rpx;
  font-weight: 500;
  position: absolute;
  top: 66rpx;
  z-index: 1;
}

.container .banner .banner-left .banner-search {
  width: 100%;
  height: 30%;
  background: #fefffe;
  border-radius: 10px;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 0px 10px 1px rgba(0, 0, 0, 0.2);
  position: absolute;
  bottom: 0;
}

.container .banner .banner-left .banner-search text {
  font-size: 40rpx;
  font-weight: 600;
}

.container .banner .banner-right {
  width: 76%;
  height: 280rpx;
  border-radius: 10px;
  box-shadow: 0 0px 10px 1px rgba(0, 0, 0, 0.2);
}

.container .banner .banner-right swiper {
  height: 100%;
}

.container .banner .banner-right swiper swiper-item {
  border-radius: 10px;
}

.container .banner .banner-right swiper swiper-item image {
  height: 100%;
  width: 100%;
  border-radius: 10px;
}

.container-search-bar {
  position: sticky;
  top: 0;
  width: 100%;
  padding: 20rpx 6%;
  box-sizing: border-box;
  z-index: 999;
  background: #fefffe;
}

.container-menu {
  position: sticky;
  top: 110rpx;
  width: 100%;
  z-index: 999;
  background: #fefffe;
}

/* container-calendar */
.calendar {
  background: #fefffe;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.calendar > scroll-view {
  width: 94%;
}

.calendar .calendar-title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 80rpx;
}

.calendar .close {
  font-size: 60rpx;
  color: #bfbfbf;
  opacity: 0.5;
}

.calendar .today {
  font-size: 48rpx;
  font-weight: 1000;
  font-family: "Noto Sans CJK SC Blod", "Source Han Sans CN Blod";
}

.calendar .weather {
}

.calendar .liquid {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: flex-start;
  margin-top: 60rpx;
}

.calendar .panel {
  width: 92%;
  height: auto;
  border-bottom: 2px solid #ececec;
  padding-bottom: 80rpx;
  box-sizing: border-box;
  margin: 8% 4% 0 4%ï¼›;
}

.calendar .panel-head {
  width: 100%;
  height: 110rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.calendar .panel-icon {
  width: 12%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.calendar .panel-icon image {
  width: 44rpx;
  height: 44rpx;
}

.calendar .panel-info {
  width: 74%;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}

.calendar .panel-emoji {
  font-size: 24rpx;
  height: 46rpx;
  width: 100%;
  line-height: 50rpx;
  padding-left: 2%;
}

.calendar .panel-time {
  width: 100%;
  height: 40rpx;
  font-size: 20rpx;
  color: #8e8e93;
}

.calendar .panel-pin {
  width: 14%;
  height: 36rpx;
  font-size: 18rpx;
  color: #8e8e93;
  border: 1px solid #8e8e93;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.calendar .panel-body1 {
  width: 100%;
  height: 160rpx;
  border-radius: 20rpx;
  box-shadow: 0 0px 10px 1px rgba(0, 0, 0, 0.2);
  letter-spacing: 1px;
  box-sizing: border-box;
}

.calendar .panel-body1 .panel-title {
  width: 100%;
  color: #fefffe;
  font-size: 40rpx;
  font-weight: 700;
  height: 100%;
  display: flex;
  align-items: center;
}

.calendar .panel-body2 {
  width: 100%;
  height: 160rpx;
  border-radius: 20rpx;
  box-shadow: 0 0px 10px 1px rgba(0, 0, 0, 0.2);
  letter-spacing: 1px;
  background: #fefffe;
  color: #000000;
  padding: 2% 4% 2% 8%;
  box-sizing: border-box;
  display: flex;
}

.calendar .panel-body2 .panel-left {
  width: 80%;
  display: flex;
  flex-wrap: wrap;
}

.calendar .panel-body2 .panel-right {
  width: 20%;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
}

.calendar .panel-body2 .panel-title {
  width: 100%;
  height: 78%;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  overflow: hidden;
}

.calendar .panel-body2 .panel-author {
  width: 100%;
  height: 22%;
  color: #8e8e93;
  font-size: 26rpx;
}

.calendar .panel-body2 .panel-author .panel-author-highlight {
  text-decoration: underline;
  color: #6ab076;
}

.calendar .panel-body3 {
  width: 100%;
  height: 420rpx;
  border-radius: 20rpx;
  box-shadow: 0 0px 10px 1px rgba(0, 0, 0, 0.2);
  color: #fefffe;
  letter-spacing: 1px;
}

.calendar .panel-body3 .panel-title1 {
  width: 100%;
  font-size: 20rpx;
  height: 20%;
}

.calendar .panel-body3 .panel-title2 {
  width: 100%;
  font-size: 42rpx;
  font-weight: 600;
  height: 70%;
}

.calendar .panel-body3 .panel-title3 {
  width: 100%;
  font-size: 20rpx;
  height: 10%;
}

.calendar .user-img {
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
}

.calendar .panel-body1 .panel-mask {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.2);
  padding: 2% 4%;
  box-sizing: border-box;
  border-radius: 20rpx;
}

.calendar .panel-body3 .panel-mask {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.2);
  padding: 2% 4%;
  box-sizing: border-box;
  border-radius: 20rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
}

/* nav */
.nav-button {
  position: fixed;
  width: 100%;
  bottom: 48rpx;
  z-index: 999;
  height: 180rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.nav-ulysses {
  background: #fefffe;
  border-radius: 50%;
  width: 110rpx;
  height: 110rpx;
  text-align: center;
  line-height: 110rpx;
  box-shadow: 0 0px 20px 1px rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-ulysses .nav-ulysses-img {
  width: 40rpx;
  height: 40rpx;
}

/* userInfo */
.userInfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #fefffe;
  width: 100%;
}

.userInfo .banner {
  width: 94%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  flex-wrap: wrap;
  margin-top: 3%;
}

.userInfo .banner-right {
  width: 21%;
  height: 260rpx;
  display: flex;
  flex-wrap: wrap;
  align-content: space-between;
}

.userInfo .banner-left {
  width: 75%;
  height: 260rpx;
  border-radius: 20rpx;
  box-shadow: 0 0px 10px 1px rgba(0, 0, 0, 0.2);
  position: relative;
  z-index: 0;
}

.userInfo .banner-left .banner-bd {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}

.userInfo .banner-left-mask {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.2);
  border-radius: 20rpx;
  z-index: 1;
  position: absolute;
  left: 0;
  top: 0;
}

.userInfo .user-edit {
  width: 44rpx;
  height: 44rpx;
  background: #fefffe;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #a7a3a4;
  position: absolute;
  right: 20rpx;
  top: 20rpx;
}

.userInfo .banner-userName {
  position: absolute;
  left: 40rpx;
  bottom: 60rpx;
}

.userInfo .banner-userName .userName {
  font-size: 44rpx;
  color: #fefffe;
  letter-spacing: 2rpx;
}

.userInfo .banner-userPage {
  position: absolute;
  left: 40rpx;
  bottom: 20rpx;
}

.userInfo .banner-userPage .userPage {
  font-size: 20rpx;
  letter-spacing: 2rpx;
  color: #fefffe;
}

.userInfo .banner-message {
  width: 100%;
  height: 61%;
  border-radius: 20rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-content: center;
  padding: 10%;
  box-sizing: border-box;
  box-shadow: 0 0px 10px 1px rgba(0, 0, 0, 0.2);
  text-align: center;
}

.userInfo .banner-message .message-title {
  width: 100%;
  font-size: 18rpx;
  letter-spacing: 2rpx;
}

.userInfo .banner-message .message-icon {
  margin-top: 15rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.userInfo .banner-message .message-icon .message-num {
  font-size: 30rpx;
  margin-left: 6rpx;
}

.userInfo .banner-message .message-icon image {
  width: 30rpx;
  height: 30rpx;
}

.userInfo .banner-setting {
  width: 100%;
  height: 30%;
  background: #fefffe;
  border-radius: 20rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 0px 10px 1px rgba(0, 0, 0, 0.2);
}

.userInfo .category-group {
  width: 84%;
  height: 200rpx;
  display: flex;
  flex-wrap: wrap;
  margin: 40rpx 8% 0 8%;
}

.userInfo .category {
  width: 100%;
  height: 50%;
  display: flex;
}

.userInfo .category-left {
  width: 50%;
  height: 100%;
  display: flex;
  align-items: center;
}

.userInfo .category-right {
  width: 50%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.userInfo .category-right .iconfont {
  height: 30rpx;
  font-size: 30rpx;
}

.userInfo .category-left .category-img {
  width: 36rpx;
  height: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.userInfo .category-title {
  margin-left: 26rpx;
  font-size: 20rpx;
}

.userInfo .category-left .category-img image {
  width: 100%;
  height: 100%;
}

.userInfo .category-info {
  font-size: 20rpx;
  color: #8e8e93;
  margin-right: 16rpx;
}
.userInfo .icon-icon_next_arrow {
  color: #8e8e93;
}

.userInfo .category-left .icon-right {
  font-size: 20rpx;
}

.userInfo .star {
  width: 100%;
  height: 600rpx;
}

.userInfo .star-title {
  width: 92%;
  font-size: 44rpx;
  height: 120rpx;
  line-height: 120rpx;
  font-weight: 600;
  margin-left: 4%;
}

.userInfo .star-box {
  width: 92%;
  box-shadow: 0 0px 10px 1px rgba(0, 0, 0, 0.2);
  margin: 4%;
  border-radius: 10rpx;
  display: flex;
  box-sizing: border-box;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 4%;
}

.userInfo .star-box-img:nth-child(1) {
  width: 100%;
  height: 360rpx;
  border-radius: 10rpx;
  position: relative;
}

.userInfo .star-box-img image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.userInfo .star-box-mask {
  width: 100%;
  height: 100%;
  z-index: 1;
  position: absolute;
  top: 0;
  left: 0;
  color: #fefffe;
}

.userInfo .star-box-title {
  font-size: 40rpx;
  position: absolute;
  top: 70rpx;
  left: 30rpx;
  z-index: 2;
}

.userInfo .star-box-inspiration {
  font-size: 20rpx;
  position: absolute;
  top: 30rpx;
  left: 30rpx;
  z-index: 2;
}

.userInfo .star-box-img:nth-child(2),
.userInfo .star-box-img:nth-child(3) {
  height: 160rpx;
  border-radius: 10rpx;
  position: relative;
  width: 48%;
  margin-top: 4%;
}

.star-box-img:nth-child(2) .star-box-inspiration,
.star-box-img:nth-child(3) .star-box-inspiration {
  font-size: 20rpx;
  position: absolute;
  top: 15rpx;
  left: 15rpx;
  z-index: 2;
}

.star-box-img:nth-child(2) .star-box-title,
.star-box-img:nth-child(3) .star-box-title {
  font-size: 30rpx;
  position: absolute;
  top: 50rpx;
  left: 15rpx;
  z-index: 2;
}
