<!--index.wxml-->
<view class="container" animation="{{animationData}}">

  <!-- banner -->
  <view class="banner">
    <!-- banner-left -->
    <view class="banner-left">
      <!-- 今日 -->
      <view class="banner-date" bindtap="redirectToCalendar">
        <view class="today">Today</view>
        <view class="date">{{date}}</view>
      </view>
      <!-- 搜索 -->
      <view class="banner-search">
        <text class="iconfont icon-chazhao"></text>
      </view>
    </view>
    <!-- banner-right -->
    <view class="banner-right">
    <!-- 幻灯片 -->
      <swiper indicator-dots="true" autoplay="true" interval="6000">
        <block wx:for="{{swiper}}">
          <swiper-item>
            <image src="{{item}}" class="slide-image" width="100%" height="100%" />
          </swiper-item>
        </block>
    </swiper>
    </view>
    <!-- 菜单 -->
    <view class="banner-menu">
      <view class="menu-tab">
        <view class="menu-tab-img">
          <image src="../image/icon/Box.png"></image>
        </view>
        <view class="menu-tab-text">  
          <text>地点标记</text>
        </view>
      </view>

      <view class="menu-tab">
        <view class="menu-tab-img">
          <image src="../image/icon/Box.png"></image>
        </view>
