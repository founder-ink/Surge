          <image src="../image/icon/Box.png"></image>
        </view>
        <view class="menu-tab-text">  
          <text>地点标记</text>
        </view>
      </view>
    </view>
  </view>

  <!-- 精选 -->
  <view class="featured">
    <text>一期一会</text>
