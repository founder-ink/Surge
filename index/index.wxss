/**index.wxss**/

page {
  background: #FEFFFE;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  box-sizing: border-box;
}

.banner {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  flex-wrap: wrap;
  padding: 0 4%;
  box-sizing: border-box;
}

.banner-left {
  width: 21%;
  height: 260rpx;
  display: flex;
  flex-wrap: wrap;
  align-content: space-between;
}

.banner-right {
  width: 75%;
  height: 260rpx;
  border-radius: 20rpx;
  box-shadow: 0 0px 10px 1px rgba(0,0,0,0.2);
}

.banner-right swiper {
  height: 100%;
  border-radius: 20rpx;
}

.banner-right swiper swiper-item image{
  height: 100%;
  width: 100%;
}

.banner-right swiper swiper-item {
  border-radius: 20rpx;
}

.banner-menu {
  width: 100%;
  height: 180rpx;
  border-bottom: 1px solid #ECECEC;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 0 12%;
}

.menu-tab {
  width: 100rpx;
  height: 100rpx;
}

.menu-tab image {
  width: 38rpx;
  height: 38rpx;
}

.menu-tab-img {
  display: flex;
  justify-content: center;
  height: 80rpx;
  align-items: flex-end;
  padding-bottom: 18rpx;
  box-sizing: border-box;
}

.menu-tab-text {
  font-size: 20rpx;
  display: flex;
  justify-content: center;
  align-items: flex-end;
  height: 20rpx;
  text-decoration: underline;
}

.banner-date {
  width: 100%;
  height: 61%;
  border-radius: 20rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-content: center;
  padding: 10%;
  box-sizing: border-box;
  text-align: center;
  color: #FFFFFF;
  letter-spacing: 1rpx;
  box-shadow: 0 0px 10px 1px rgba(0,0,0,0.2);
  background: url("http://pp8qnwtjv.bkt.clouddn.com/surge-lamp.jpg") no-repeat center center ;
  background-size: cover;
}

.banner-date .today {
  width: 100%;
  font-size: 24rpx; 
  font-weight: 500;
  font-family: "Noto Sans CJK SC", "Source Han Sans CN";
}

.banner-date .date {
  width: 100%;
  margin-top: 2rpx;
  font-size: 60rpx;
  font-family: "Helvetica Neue";
  font-weight: 500;
}

.banner-search {
  width: 100%;
  height: 30%;
  background: #FEFFFE;
  border-radius: 20rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 0px 10px 1px rgba(0,0,0,0.2);
}

.featured {
  width: 100%;
  height: 800rpx;
  border-bottom: 1px solid #ECECEC;
  padding-left: 4%;
  box-sizing: border-box;
}

.featured .featured-title {  
  width: 100%;
  height: 110rpx;
  display: flex;
  align-items: center;
  font-weight: 600;
  letter-spacing: 1px;
  font-size: 40rpx;
}

.featured .panel {
  height: 660rpx;
  box-sizing: border-box; 
  display: flex;
  white-space: nowrap;
}

.featured .panel .panel-body {
  display: inline-block;
  width: 630rpx;
  height: 640rpx;
  border-radius: 20rpx;
  color: #FEFFFE;
  letter-spacing: 1px;
  margin: 6rpx 20rpx 0 10rpx;
  box-shadow: 0 0px 10px 1px rgba(0,0,0,0.2);
}

.featured .panel .panel-body .panel-title1 {
  width: 100%;
  font-size: 20rpx;
  height: 10%;
  display: flex;
  align-items: center;
}

.featured .panel .panel-body .panel-title2 {
  width: 100%;
  font-size: 42rpx;
  font-weight: 600;
  height: 80%;
  display: flex;
  align-items: flex-end;
  padding-bottom: 2%;
  box-sizing: border-box;
}

.featured .panel .panel-body .panel-title3 {
  width: 100%;
  font-size: 20rpx;
  height: 10%;
  white-space: normal;
}

.featured .panel .panel-body .panel-mask {
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,.2);
  padding: 2% 4%;
  box-sizing: border-box;
  border-radius: 20rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
}

.flow {
  width: 100%;
  padding-left: 4%;
  box-sizing: border-box;
  overflow: hidden;
}

.flow .flow-title {  
  width: 100%;
  height: 110rpx;
  display: flex;
  align-items: center;
  font-weight: 600;
  letter-spacing: 1px;
  font-size: 40rpx;
}

.flow .nav {
  width: 100%;
  height: 540rpx;
  box-sizing: border-box;
}

.flow .nav-title {
  width: 100%;
  height: 120rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}

.flow .nav-title view{
  width: 4px;
  height: 60rpx;
  box-sizing: border-box;
  background: #69b076;
  border-radius: 4px;
}

.flow .nav-title text{
  margin-left: 4%;
  font-size: 36rpx;
  font-weight: 600;
  letter-spacing: 1px;
}

.nav .panel {
  height: 350rpx;
  box-sizing: border-box; 
  display: flex;
  white-space: nowrap;
}

.nav .panel-card {
  display: inline-block;
  width: 280rpx;
  height: 250rpx;
  border-radius: 20rpx;
  margin-right: 30rpx;
}

.nav .panel .panel-body {

  width: 100%;
  height: 260rpx;
  border-radius: 20rpx;
  box-shadow: 0 0px 10px 1px rgba(0,0,0,0.2);
  color: #FEFFFE;
  letter-spacing: 1px;
  margin-right: 40rpx;
}

.nav .panel .panel-mask {
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,.2);
  padding: 5%;
  box-sizing: border-box;
  border-radius: 20rpx;
  display: flex;
  flex-wrap: wrap;
  align-items: flex-end;
}

.nav .panel .panel-body .panel-mask .panel-title {
  font-size: 24rpx;
  height: 40%;
  display: flex;
  align-items: center;
	text-overflow: ellipsis;
  width: 100%;
  white-space: normal;
}

.nav .panel .panel-user {
  width: 100%;
  display: flex;
  height: 90rpx;
  align-items: center;
}

.nav .panel .panel-user .panel-userImg{
  display: flex;
  justify-content: center;
  align-items: center;
}

.nav .panel .panel-user .panel-userImg image{
  width: 58rpx;
  height: 58rpx;
  border-radius: 50%;
}

.nav .panel .panel-user .panel-userName {
  box-sizing: border-box;
  padding-left: 5%;
}
.nav .panel .panel-user .panel-userName text{
  font-size: 22rpx;
}

.nav .panel-info {
  width:280rpx;
  background:#69b076;
  border-radius:30rpx;
  height:52rpx;
  font-size:24rpx;
  color:#FFFFFF;
  line-height:52rpx;
  margin: 15rpx 0 15rpx 0;

}

