page {
  background: #FEFFFE;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  box-sizing: border-box;
}

.banner {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  flex-wrap: wrap;
  padding: 0 4%;
  box-sizing: border-box;
}

.banner-right {
  width: 21%;
  height: 260rpx;
  display: flex;
  flex-wrap: wrap;
  align-content: space-between;
}

.banner-left {
  width: 75%;
  height: 260rpx;
  border-radius: 20rpx;
  box-shadow: 0 0px 10px 1px rgba(0,0,0,0.2);
}

.banner-left-mask {
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,.2);
  padding: 4%;
  box-sizing: border-box;
  border-radius: 20rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
}

.banner-left-top {
  width: 100%;
  display: flex;
  justify-content: flex-end;
  height: 60%;
}

.user-edit {
  width: 52rpx;
  height: 52rpx;
  background: #FEFFFE;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #A7A3A4;
}

.banner-left-bottom {
  width: 100%;
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
  height: 40%;
  align-items: flex-end;
}

.banner-left-bottom .userName{
  width: 100%;
  font-size: 36rpx;
  color: #FEFFFE;
}

.banner-left-bottom .userName text{
  letter-spacing: 1px;
}

.banner-left-bottom .userPage{
  width: 100%;
  font-size: 20rpx;
  letter-spacing: 1px;
  color: #FEFFFE;
  font-weight: 100;
}

.banner-message {
  width: 100%;
  height: 61%;
  border-radius: 20rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-content: center;
  padding: 10%;
  box-sizing: border-box;
  box-shadow: 0 0px 10px 1px rgba(0,0,0,0.2);
  text-align: center;
}

.banner-message .message-title {
  width: 100%;
  font-size: 20rpx;
}

.banner-message .message-icon {
  width: 100%;
}

.banner-setting {
  width: 100%;
  height: 30%;
  background: #FEFFFE;
  border-radius: 20rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 0px 10px 1px rgba(0,0,0,0.2);
}

.category-group {
  width: 100%;
  height: 200rpx;
  display: flex;
  flex-wrap: wrap;
  box-sizing: border-box;
  padding: 0 8%;
}

.category {
  width: 100%;
  height: 50%;
  display: flex;
}

.category-left {
  width: 50%;
  height: 100%;
  display: flex;
  align-items: center;
}

.category-right {
  width: 50%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.category-right .iconfont {
  height: 30rpx;
  font-size: 30rpx;
}

.category-left .category-img {
  width: 32rpx;
  height: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.category-title {
  margin-left: 4%;
  font-size: 20rpx;
}

.category-left .category-img image{
  width: 100%;
  height: 100%;
}

.category-info { 
  font-size: 20rpx;
  color: #8e8e93;
  margin-right: 16rpx;
}

.category-left .icon-right {
  font-size: 20rpx;
}

.star {
  width: 100%;
  height: 600rpx;
  padding: 0 4%;
  box-sizing: border-box;
}

.star-title {
  width: 100%;
  font-size: 44rpx;
  height: 120rpx;
  line-height: 120rpx;
  font-weight: 600;
}

.star-box {
  height: 400rpx;
  width: 100%;
  box-sizing: border-box;
  box-shadow: 0 0px 10px 1px rgba(0,0,0,0.2);
  padding: 4%;
  border-radius: 10rpx;
}

.star-box-mask {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  display: flex;
  padding: 10% 4%;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: flex-start;
}

.star-box-mask text {
  width: 100%;
  height: 54rpx;
  color: #FEFFFE;
}
.star-box-title {
  display: flex;
  flex-wrap: wrap;
  font-size: 38rpx
}
.star-box-img {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}